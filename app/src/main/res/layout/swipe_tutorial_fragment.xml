<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_card_container"
        android:layout_width="@dimen/dummy_card_width"
        android:layout_height="@dimen/dummy_card_height"
        android:layout_centerInParent="true"
        android:clipToPadding="false"
        android:padding="16dp">

        <ImageView
            android:visibility="gone"
            android:layout_margin="20dp"
            android:id="@+id/iv_dummy_card_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_dummy_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <TextView
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/help_text_margin_top"
        android:textSize="@dimen/help_text_size"
        android:text="Swipe The Cards To See Weekly Forecast"
        android:textColor="@android:color/white" />

</RelativeLayout>