<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:visibility="gone"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/ll_card_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_weather_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/weather_desc_bottom_margin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/weather_detail_txt_size" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TableRow>

                <TextView
                    android:layout_marginRight="80dp"
                    android:padding="2dp"
                    android:text="Pressure"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_pressure"
                    android:padding="2dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:padding="2dp"
                    android:text="Wind Speed"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_wind_speed"
                    android:padding="2dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:padding="2dp"
                    android:text="Wind Direction"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_wind_direction"
                    android:padding="2dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/temperature_margin"
            android:layout_marginTop="@dimen/temperature_margin"
            android:text="Temperature"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TableRow>

                <TextView
                    android:textSize="12sp"
                    android:layout_marginRight="80dp"
                    android:padding="2dp"
                    android:text="Max"
                    android:textColor="@android:color/white" />

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/tv_max_temp"
                    android:gravity="left"
                    android:padding="2dp"
                    android:textColor="@android:color/white" />

            </TableRow>

            <TableRow>

                <TextView
                    android:textSize="12sp"
                    android:padding="2dp"
                    android:text="Max Time"
                    android:textColor="@android:color/white" />

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/tv_max_temp_time"
                    android:gravity="left"
                    android:padding="2dp"
                    android:textColor="@android:color/white" />

            </TableRow>

            <TableRow>

                <TextView
                    android:textSize="12sp"
                    android:padding="2dp"
                    android:text="Min"
                    android:textColor="@android:color/white" />

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/tv_min_temp"
                    android:gravity="left"
                    android:textColor="@android:color/white" />

            </TableRow>

            <TableRow>

                <TextView
                    android:textSize="12sp"
                    android:padding="2dp"
                    android:text="Min Time"
                    android:textColor="@android:color/white" />

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/tv_temp_min_time"
                    android:gravity="left"
                    android:padding="2dp"
                    android:textColor="@android:color/white" />

            </TableRow>

        </TableLayout>

        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/chart_margin_top" />

    </LinearLayout>

</android.support.v7.widget.CardView>